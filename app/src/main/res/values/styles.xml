<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AuthRegEditText">
        <item name="android:textColor">@color/color_auth_accent</item>
        <item name="android:textColorHint">@color/color_auth_accent</item>
        <item name="android:background">@drawable/bg_auth_reg_edit_text</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textSize">@dimen/dimen_text_sub_header</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TestStartAnswerButton">
        <item name="android:background">@drawable/bg_round_light</item>
        <item name="android:padding">5dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
</resources>
